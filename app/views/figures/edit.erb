<h1>Edit Figure - <%=@figure.name%> </h1>

<form action="/figures/<%=@figure.id%>" method="POST">
<input type="hidden" name="_method" value="PATCH">

<label><h2>New Figure Name:</h2></label>
<input type="text" name="figure[name]" value="<%=@figure.name%>" id="figure_name">
<br></br>


<label><h2>Edit Title:</h2></label>
<%@titles.each do |title|%>
  <input type="checkbox" name="figure[title_ids][]" id="<%=title.name%>" value="<%=title.id%>"
  <%='checked' if @figure.titles.include?(title) %>><%=title.name%></input>
<%end%>

<label><h2>or, Create new Title:</h2></label>
<input type="text" name="title[name]" id="new_title">

<label><h2>Edit Landmark:</h2></label>
<%@landmarks.each do |landmark|%>
  <input type="checkbox" name="figure[landmark_ids][]" id="<%=landmark.name%>" value="<%=landmark.id%>"
  <%='checked' if @figure.landmarks.include?(landmark)%>><%=landmark.name%></input>
<%end%>

<label><h2>or, Create new Landmark:</h2></label>
<input type="text" name="landmark[name]" id="new_landmark">



<input type="submit" value="Edit Figure">
</form>
